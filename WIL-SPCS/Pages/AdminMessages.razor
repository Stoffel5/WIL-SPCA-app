@page "/AdminMessages"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Desktop Style Chat UI</title>
    <style>
        /* Reset */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        html, body {
            width: 100%;
            height: 100%;
            overflow: hidden; /* Prevent scrolling */
            display: flex;
            background-color: #e5ddd5;
        }

        /* Main container */
        .chat-container {
            display: flex;
            width: 100%;
            height: 100%;
        }

        /* Inbox Panel */
        .inbox-panel {
            width: 30%;
            background-color: #f8f9fa;
            border-right: 1px solid #ddd;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .inbox-header {
            padding: 20px;
            background-color: #ededed;
            border-bottom: 1px solid #ddd;
            font-weight: bold;
            color: #333;
        }

        .conversation-list {
            flex: 1;
            overflow-y: auto;
            background-color: #ffffff;
        }

        .conversation {
            padding: 15px 20px;
            display: flex;
            align-items: center;
            cursor: pointer;
            border-bottom: 1px solid #f0f0f0;
            transition: background-color 0.2s ease;
        }

            .conversation:hover {
                background-color: #f1f1f1;
            }

        .avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background-color: #bbb;
            margin-right: 15px;
        }

        .conversation-details {
            flex: 1;
        }

        .conversation-name {
            font-weight: bold;
            color: #333;
            margin-bottom: 4px;
        }

        .conversation-preview {
            color: #666;
            font-size: 0.9em;
        }

        /* Chat Panel */
        .chat-panel {
            width: 70%;
            display: flex;
            flex-direction: column;
            height: 100%;
            background-color: #efeae2;
        }

        .chat-header {
            padding: 15px 20px;
            background-color: #ededed;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .chat-title {
            font-weight: bold;
            font-size: 1.1em;
            color: #333;
        }

        .chat-history {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background-color: #e5ddd5;
        }

        .message {
            padding: 10px 15px;
            border-radius: 8px;
            margin: 8px 0;
            max-width: 60%;
            font-size: 0.9em;
        }

            .message.sent {
                align-self: flex-end;
                background-color: #dcf8c6;
            }

            .message.received {
                align-self: flex-start;
                background-color: #ffffff;
            }

        /* Chat Input */
        .chat-input {
            display: flex;
            padding: 10px 20px;
            border-top: 1px solid #ddd;
            background-color: #f0f0f0;
        }

            .chat-input input[type="text"] {
                flex: 1;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 20px;
                margin-right: 10px;
                outline: none;
            }

            .chat-input button {
                padding: 10px 20px;
                border: none;
                border-radius: 50%;
                background-color: #25d366;
                color: #ffffff;
                cursor: pointer;
                font-size: 1.2em;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .chat-input button:hover {
                    background-color: #1ebc59;
                }
    </style>
</head>
<body>
    <div class="chat-container">
        <!-- Inbox Panel -->
        <div class="inbox-panel">
            <div class="inbox-header">Chats</div>
            <div class="conversation-list">
                <!-- Conversation items go here -->
            </div>
        </div>

        <!-- Chat Panel -->
        <div class="chat-panel">
            <!-- Chat Header -->
            <div class="chat-header">
                <div class="chat-title">Chat Name</div>
            </div>

            <!-- Chat History -->
            <div class="chat-history">
                <!-- Message items go here -->
            </div>

            <!-- Chat Input -->
            <div class="chat-input">
                <input type="text" placeholder="Type a message...">
                <button type="button">➤</button>
            </div>
        </div>
    </div>
</body>
</html>
