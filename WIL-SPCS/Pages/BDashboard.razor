@page "/bdashboard"
@layout MainLayout
@inject HttpClient Http

<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">

<div class="side-navbar">
    <div class="nav-header">Navigation</div>
    <a href="/bdashboard">Dashboard</a>
    <a href="/bgallery">Gallery</a>
    <a href="/binformation">Information</a>
</div>

<div class="main-content">
    <div class="logo-container">
        <img src="images/logo.png" alt="SPCA Logo" class="spca-logo" />
    </div>

    <h2 class="welcome-message">
        Catch a glimpse of our adorable pets as they introduce themselves in this charming little video!
    </h2>

    <div class="video-grid">
        @foreach (var pet in pets)
        {
            if (videoCount < 2 && pet.imageUrl.Contains(".mp4"))
            {
                <div class="gallery-item">
                    <video controls>
                        <source src="@pet.imageUrl" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                videoCount++;
            }

            if (videoCount == 2)
            {
                break;
            }
        }
    </div>

    <div class="info-container">
        <div class="card about-us">
            <h3>About Us</h3>
            <ul>
                <li><strong>Pet Adoption:</strong> Find your new furry friend.</li>
                <li><strong>Education Program:</strong> Learn about animal care and welfare.</li>
                <li><strong>Pet Boarding:</strong> Safe and loving care for your pets while you're away.</li>
                <li><strong>We are a PBO:</strong> A registered Public Benefit Organization.</li>
                <li><strong>Volunteers:</strong> Join us in our mission to help animals.</li>
            </ul>
        </div>

        <div class="card contact-us">
            <h3>Contact Us</h3>
            <p><strong>Address:</strong> Schonland St, Cape Road Industrial, Kariega, 6021</p>
            <p><strong>Phone:</strong> 041 992 3016</p>
            <p><strong>Emergency:</strong> 082 905 4716 (After Hours)</p>
            <p><strong>Email:</strong> <a href="mailto:info@uitenhagespca.co.za">info@uitenhagespca.co.za</a></p>
        </div>
    </div>
</div>

@code {
    List<Pet> pets = new List<Pet>();
    int imageCount = 0;
    int videoCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await GetPets();
    }

    private async Task GetPets()
    {
        /*
        Code Attribution
        Title: GET Request to API with Blazor/C#
        Author: ZetBit
        Link: https://www.youtube.com/watch?v=SjhzOauYC80
        Usage: Used to make get request in blazer
        */
        pets = await Http.GetFromJsonAsync<List<Pet>>("https://spcaapi.azurewebsites.net/api/Animal/GetAnimals");
    }

    public class Pet
    {
        public string petId { get; set; }
        public string name { get; set; }
        public string breed { get; set; }
        public string health { get; set; }
        public string weight { get; set; }
        public string adoptionStatus { get; set; }
        public string animalType { get; set; }
        public string imageUrl { get; set; }
    }
}

