@page "/desktophome"
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<div class="desktop-container">
    <img src="./css/SPCALOGO.jpg" alt="Left Image" class="home-image">
    <h3 class="heading centered-text">Home</h3>
    <img src="./css/SPCALOGO.jpg" alt="Right Image" class="home-image">
</div>

<div style="padding-left: 16px"></div>

<div class="desktop-btns">
    <button class="desktop-cards" @onclick=NavigateToMessages>
        <center><img src="#" class="thumbnail"></center>
        <h3>Messages</h3>
    </button>
    <button class="desktop-cards" @onclick=NavigateToReport>
        <center><img src="#" class="thumbnail"></center>
        <h3>Reports</h3>
    </button>
    <button class="desktop-cards" @onclick=NavigateToVolunteers>
        <center><img src="#" class="thumbnail"></center>
        <h3>Volunteers</h3>
    </button>
    <button class="desktop-cards" @onclick=NavigateToInventory>
        <center><img src="#" class="thumbnail"></center>
        <h3>Inventory</h3>
    </button>
    <button class="desktop-cards" @onclick=NavigateToEvents>
        <center><img src="#" class="thumbnail"></center>
        <h3>Events</h3>
    </button>
</div>

@code {
    private void NavigateToReport()
    {
        Navigation.NavigateTo("/AdminReport");
    }
    private void NavigateToEvents()
    {
        Navigation.NavigateTo("/AdminEvents");
    }
    private void NavigateToInventory()
    {
        Navigation.NavigateTo("/AdminInventory");
    }
    private void NavigateToVolunteers()
    {
        Navigation.NavigateTo("/AdminVolunteers");
    }
    private void NavigateToMessages()
    {
        Navigation.NavigateTo("/AdminMessages");
    }
}

<style>
    .heading{
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        align-items: center;
    }

</style>
