@page "/volunteer"
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <style>
        html, body {
            font-family: 'Quicksand', sans-serif;
            background-color: #E8E8E8;
            color: #333333;
            margin: 0;
            padding: 0;
        }

        .centered-text {
            text-align: center;
            font-size: 2.5em;
            color: #9EACA4;
            margin-top: 20px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        .volunteer-container {
            padding: 20px;
            margin: auto;
            max-width: 1200px;
            background-color: #F5F5F5;
            border-radius: 20px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        }

        .volunteer-intro {
            text-align: center;
            margin-bottom: 40px;
            font-size: 1.5em;
            color: #4A4A4A;
            font-weight: bold;
        }

        .volunteer-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            justify-items: center;
            padding: 10px;
        }

        .volunteer-card {
            background-color: #9EACA4;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
            padding: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            color: #ffffff;
            min-width: 250px;
            max-width: 300px;
            height: 350px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .volunteer-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.3);
            background-color: #B1C1B5;
        }

        .volunteer-card img {
            max-width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .volunteer-card h4 {
            margin: 10px 0;
            font-size: 1.4em;
            color: #ffffff;
        }

        .volunteer-card p {
            font-size: 1em;
            color: #F0F0F0;
            margin-top: auto;
        }

        .main-content {
            padding: 40px;
        }

        .sticker-container {
            position: fixed;
            bottom: 10px;
            right: 10px;
            padding: 10px;
        }

        .sticker-image {
            max-width: 120px;
            height: auto;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            transition: box-shadow 0.3s ease-in-out;
        }

        .sticker-image:hover {
            box-shadow: 0 0 10px #ffffff, 0 0 20px #ffffff, 0 0 30px #ffffff;
        }
    </style>
</head>
<body>
    <h2 class="centered-text">Join Our Volunteer Team</h2>

    <div class="main-content">
        <div class="volunteer-container">
            <div class="volunteer-intro">
                <p>The SPCA welcomes volunteers with open paws! Reach out to them and offer your services today. Let's make tails wag and hearts smile together!</p>
            </div>
            <div class="volunteer-grid">
                <div class="volunteer-card">
                    <img src="images/breadcat.jpg" alt="Animal Care" />
                    <h4>Animal Care</h4>
                    <p>Feeding, grooming, and exercising the animals.</p>
                </div>
                <div class="volunteer-card">
                    <img src="images/dogg.jpg" alt="Event Assistance" />
                    <h4>Event Assistance</h4>
                    <p>Helping organize and manage SPCA events.</p>
                </div>
                <div class="volunteer-card">
                    <img src="images/copycat.jpg" alt="Administrative Support" />
                    <h4>Administrative Support</h4>
                    <p>Assisting with office tasks and paperwork.</p>
                </div>
            </div>

            <div class="sticker-container">
                <img src="stickers/kitty1.png" alt="Cute Kitty Sticker" class="sticker-image" id="stickerImage" />
            </div>
        </div>
    </div>
</body>
</html>
