@page "/userReport"

<h3 class="report-title">Report</h3>

@inject NavigationManager Navigation
@inject HttpClient Http
@using System.ComponentModel.DataAnnotations

<div id="sideNavbar" class="side-navbar">

    <div id="arrow" class="arrow-icon">►</div>

