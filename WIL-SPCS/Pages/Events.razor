        top: 20px;
        left: 20px;
        z-index: 101;
        transition: background-color 0.3s ease;
    }

        .open-btn:hover {
            background-color: #0d2a4a;
        }

    .main-content {
        margin-left: 250px;
        padding: 20px;
        position: relative;
        background-color: #143963;
        border-radius: 8px;
    }
    }
</style>

<script>
    function openNav() {
        document.getElementById("sideNavbar").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("sideNavbar").style.width = "0";
    }
</script>

