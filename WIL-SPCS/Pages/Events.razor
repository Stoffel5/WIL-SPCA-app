@page "/events"

<h2 class="centered-text">Events</h2>
<button class="open-nav-btn" onclick="openNav()">☰ </button>

<!-- Side Navigation Bar -->
<div id="sideNavbar" class="side-navbar">
    <a href="javascript:void(0)" class="close-btn" onclick="closeNav()">×</a>
    <a href="/adopt" class="nav-link">Adopt a Pet</a>
    <a href="/awareness" class="nav-link">Awareness</a>
    <a href="/donations" class="nav-link">Donations and Sponsors</a>
    <a href="/volunteer" class="nav-link">Volunteer</a>
    <a href="/gallery" class="nav-link">Gallery</a>
    <a href="/boarding" class="nav-link">Animal Boarding</a>
    <a href="/events" class="nav-link">Events</a>
</div>

<!-- Calendar and Date Picker -->
<div class="calendar-container">
    <h3>Select a Date to See Events</h3>
    <input type="date" @bind="selectedDate" class="date-picker" />
    <div class="calendar">
        <!-- Include the custom calendar component -->
        <CustomCalendar />
    </div>
</div>

<!-- Events List -->
<div class="events-container">
    <h3 class="centered-text">Events on @selectedDate.ToShortDateString()</h3>
    <ul>
        @foreach (var ev in events)
        {
            <li class="event-item">
                <strong>@ev.Title</strong>
                <p>@ev.Description</p>
            </li>
        }
    </ul>
</div>

@code {
    private DateTime selectedDate = DateTime.Now;
    private List<Event> events = new List<Event>();

    protected override void OnInitialized()
    {
        LoadEvents();
    }

    private void OnDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value.ToString(), out var date))
        {
            selectedDate = date;
            LoadEvents();
        }
    }

    private void LoadEvents()
    {
        events = GetEventsForDate(selectedDate);
    }

    private List<Event> GetEventsForDate(DateTime date)
    {
        return new List<Event>
        {
            new Event { Title = "Sample Event 1", Description = "Description of Sample Event 1" },
            new Event { Title = "Sample Event 2", Description = "Description of Sample Event 2" }
        };
    }

    public class Event
    {
        public string Title { get; set; }
        public string Description { get; set; }
    }
}

<style>
    .centered-text {
        text-align: center;
        font-family: Arial, sans-serif;
        color: #ffffff;
    }

    .calendar-container {
        padding: 20px;
        text-align: center;
    }

    .date-picker {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin: 10px 0;
    }

    .calendar {
        margin: 20px auto;
        background-color: #f4f4f4;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .events-container {
        padding: 20px;
    }

    .event-item {
        background-color: #e6f7ff;
        border: 1px solid #007BFF;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 15px;
        text-align: center;
        color: #007BFF;
    }

        .event-item strong {
            display: block;
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        .event-item p {
            margin: 0;
            font-size: 1.2em;
        }

    /* Side Navbar Styles */
    .side-navbar {
        height: 100%;
        width: 0;
        position: fixed;
        top: 0;
        left: 0;
        background-color: #143963;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
        z-index: 100;
        border-right: 2px solid #ffffff;
    }

        .side-navbar .nav-link {
            padding: 15px 20px;
            font-size: 1.2em;
            color: #e0f7fa;
            display: block;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            text-decoration: none;
        }

            .side-navbar .nav-link:hover {
                background-color: #4775A9;
                color: #ffffff;
                box-shadow: 0 0 10px #ffffff;
            }

        .side-navbar .close-btn {
            position: absolute;
            top: 15px;
            right: 25px;
            font-size: 30px;
            color: #ffffff;
        }

    /* Dark blue button */
    .open-btn {
        font-size: 24px;
        cursor: pointer;
        background-color: #143963;
        color: #ffffff;
        border: none;
        padding: 15px 25px;
        border-radius: 25px;
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 101;
        transition: background-color 0.3s ease;
    }

        .open-btn:hover {
            background-color: #0d2a4a;
        }

    .main-content {
        margin-left: 250px;
        padding: 20px;
        position: relative;
        background-color: #143963;
        border-radius: 8px;
    }
    }
</style>

<script>
    function openNav() {
        document.getElementById("sideNavbar").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("sideNavbar").style.width = "0";
    }
</script>

