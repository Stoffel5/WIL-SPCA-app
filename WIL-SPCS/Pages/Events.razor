    .calendar {
        width: 80%;
        max-width: 1000px;
        margin: 0 auto;
        border: 1px solid #ccc;
    }

    .header {
        display: flex;
        background-color: #143963;
        color: white;
    }

        .header .day {
            flex: 1; /* Ensure that each header takes equal space */
            text-align: center;
