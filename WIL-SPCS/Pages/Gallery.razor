<div>
    <center><h3 style="color: #143963;">Gallery</h3></center>
    <center>
        <input type="text" placeholder="dog,cat..." class="desktop-search-bar">
        <button class="search-button">Search</button>
    </center>
</div>
               

<div class="gallery">
    <div class="gallery-item">
        <img src="/dogimages/dog1.jpg" alt="Dog 1">
    </div>
    <div class="gallery-item">
        <img src="/dogimages/dog2.jpg" alt="Dog 2">
    </div>
    <div class="gallery-item">
        <img src="/dogimages/pup3.jpg" alt="Pup 3">
    </div>
    <div class="gallery-item">
        <img src="/dogimages/puppy.jpg" alt="Puppy">
    </div>
    <div class="gallery-item">
        <img src="/dogimages/puppy1.jpg" alt="Puppy 1">
    </div>
    <div class="gallery-item">
        <video src="/videos/catvid1.mp4" controls></video>
    </div>
    <div class="gallery-item">
        <video src="/videos/catvid2.mp4" controls></video>
    </div>
    <div class="gallery-item">
        <video src="/videos/doggvid1.mp4" controls></video>
    </div>
    <div class="gallery-item">
