@page "/gallery"

<button class="open-btn" onclick="openNav()">☰</button>

<!-- Side Navigation Bar -->
<div id="sideNavbar" class="side-navbar">
    <a href="javascript:void(0)" class="close-btn" onclick="closeNav()">×</a>
    <a href="/adopt" class="nav-link">Adopt a Pet</a>
    <a href="/awareness" class="nav-link">Awareness</a>
    <a href="/donations" class="nav-link">Donations</a>
    <a href="/volunteer" class="nav-link">Volunteer</a>
    <a href="/gallery" class="nav-link">Gallery</a>
    <a href="/boarding" class="nav-link">Animal Boarding</a>
    <a href="/events" class="nav-link">Events</a>
</div>

<!-- Main Content -->
<div class="main-content">
    <!-- Gallery Page Content -->
    <div class="gallery-container">
        <h1 class="centered-heading">Dog Video Gallery</h1>
        <p class="intro-paragraph">
            Welcome to our gallery of adorable dog videos! Enjoy watching these videos to see the playful and loving nature of our furry friends.
        </p>
        <div class="video-gallery">
            <!-- Example video items -->
            <div class="video-item">
                <video width="320" height="240" controls>
                    <source src="css/video3.html" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                <p>Playful Pup 1</p>
            </div>
            <div class="video-item">
                <video width="320" height="240" controls>
                    <source src="css/video3.html" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                <p>Happy Hound 2</p>
            </div>
            <!-- Add more video items here -->
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('images/background1.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    /* Side Navbar Styles */
    .side-navbar {
        height: 100%;
        width: 0;
        position: fixed;
        top: 0;
        left: 0;
        background-color: #143963;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
        z-index: 100;
        border-right: 2px solid #ffffff;
    }

        /* Remove underline from links */
        .side-navbar .nav-link {
            padding: 15px 20px;
            font-size: 1.2em;
            color: #e0f7fa;
            display: block;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            text-decoration: none;
        }

            /* Dark blue background on hover */
            .side-navbar .nav-link:hover {
                background-color: #4775A9;
                color: #ffffff;
                box-shadow: 0 0 10px #ffffff;
            }

        .side-navbar .close-btn {
            position: absolute;
            top: 15px;
            right: 25px;
            font-size: 30px;
            color: #ffffff;
        }

    /* Dark blue button */
    .open-btn {
        font-size: 24px;
        cursor: pointer;
        background-color: #143963;
        color: #ffffff;
        border: none;
        padding: 15px 25px;
        border-radius: 25px;
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 101;
        transition: background-color 0.3s ease;
    }

        /* Darker blue on hover */
        .open-btn:hover {
            background-color: #0d2a4a;
        }

    .main-content {
        margin-left: 250px;
        padding: 20px;
        position: relative;
        background-color: #143963;
        border-radius: 8px;
    }

    .gallery-container {
        padding: 20px;
        text-align: center;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 1000px;
    }

    .centered-heading {
        font-size: 2.5em;
        color: #143963;
        margin-bottom: 20px;
    }

    .intro-paragraph {
        font-size: 1.2em;
        color: #333;
        margin-bottom: 20px;
    }

    .video-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .video-item {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 10px;
        max-width: 320px;
        text-align: center;
    }

        .video-item p {
            font-size: 1.1em;
            color: #555;
            margin-top: 10px;
        }

    .progress-container {
        margin-top: 30px;
        padding: 20px;
        background-color: #007BFF;
        color: white;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
</style>

<script>
    function openNav() {
        document.getElementById("sideNavbar").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("sideNavbar").style.width = "0";
    }
</script>

