@page "/boarding"
@inject NavigationManager NavigationManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SPCA Pet Boarding</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <style>
        html, body {
            font-family: Arial, sans-serif;
            color: #333;
            background: url('/images/background123.png') no-repeat center center;
            background-size: cover;
        }

        .top {
            margin: 30px;
            text-align: center;
        }

        .boarding-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 30px;
            background-color: #143963;
            border-radius: 20px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        }

        .heading {
            text-align: center;
            font-size: 2.5em;
            color: white;
            margin-bottom: 20px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        }

        .card {
            background-color: white;
            border: 1px solid #143963;
            border-radius: 10px;
            padding: 20px;
            margin: 15px 0;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            color: #143963;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.3);
               /*  background-color: #143963;
                color: white; */
            }

            .card h2 {
                font-size: 1.8em;
                color: #143963;
                margin-top: 0;
            }

           

        .content p {
            font-size: 1em;
            line-height: 1.6;
            color: #333333;
        }

        .rates-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            .rates-table th, .rates-table td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #143963;
            }

            .rates-table th {
                font-weight: bold;
                color: #143963;
            }

            .rates-table td {
                color: #333333;
            }

        .card:hover .rates-table th,
        .card:hover .rates-table td {
           /*  color: white; */
            /* border-bottom: 1px solid white; */
        }

        .highlight {
            font-weight: bold;
            color: #143963;
        }

        .back-button {
            background-color: #ffffff;
            color: #143963;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 1em;
            cursor: pointer;
            margin-bottom: 20px;
            transition: background-color 0.3s, transform 0.3s;
        }

            .back-button:hover {
                /* background-color: #143963;
                color: white; */
                transform: scale(1.05);
            }

    </style>
</head>
<body>
    <div class="boarding-container">

        <button class="back-button" @onclick="NavigateBack">Back </button>

        <h1 class="heading">SPCA Pet Boarding</h1>

        <div class="card">
            <h2>Home Away from Home</h2>
            <p>Looking for a safe and loving place for your pets while you're on holiday? Why not bring them to the SPCA? We accommodate cats and dogs of all sizes at our clean and comfortable Uitenhage SPCA boarding kennels. You can relax, knowing they’ll receive the best possible care!</p>
        </div>

        <div class="card">
            <h2>Rates Per Day</h2>
            <table class="rates-table">
                <tr>
                    <th>Category</th>
                    <th>Rate</th>
                </tr>
                <tr>
                    <td>Cat</td>
                    <td>R 50.00</td>
                </tr>
                <tr>
                    <td>Kitten</td>
                    <td>R 50.00</td>
                </tr>
                <tr>
                    <td>Small Breed Dog</td>
                    <td>R 50.00</td>
                </tr>
                <tr>
                    <td>Medium Breed Dog</td>
                    <td>R 50.00</td>
                </tr>
                <tr>
                    <td>Large Breed Dog</td>
                    <td>R 50.00</td>
                </tr>
            </table>
        </div>

        <div class="card">
            <h2>Important Notes</h2>
            <p>Please ensure that your pets are fully vaccinated (at least two weeks prior to admission) as proof of vaccination is required for admission. This helps us protect the health of all animals in our care.</p>
            <p>We ask that you bring your pet’s food, bowls, and bedding. Food should be stored in sealed, labeled containers. Rest assured, we’ll provide fresh water, love, and attention daily.</p>
            <p class="highlight">Please note: We cannot accept animals younger than 6 months.</p>
        </div>
    </div>

    @code {
        private void NavigateBack() => NavigationManager.NavigateTo("/information");
    }

</body>
</html>
