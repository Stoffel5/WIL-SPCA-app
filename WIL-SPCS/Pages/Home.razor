@page "/"

@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<div class="background-image">

    <div class="top-right">
        <button class="btn btn-outline-secondary just-browsing-btn" @onclick="NavigateToBrowsing">Just Browsing</button>
    </div>

    <div class="centered-content">
        <img src="css/SPCALOGO.jpg" alt="SPCA LOGO" class="centered-image" />
        <div class="button-container">
            <button class="btn btn-primary custom-btn" @onclick="NavigateToRegister">Sign Up</button>
            <button class="btn btn-secondary custom-btn" @onclick="NavigateToLogin">Login</button>
            <button class="btn btn-secondary custom-btn" @onclick="NavigateToAdmin">Admin</button>
        </div>
    </div>
</div>

@code {
    private void NavigateToRegister()
    {
        Navigation.NavigateTo("/register");
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private void NavigateToBrowsing()
    {
        Navigation.NavigateTo("/browsing");
    }
    private void NavigateToAdmin()
    {
        Navigation.NavigateTo("/desktophome");
    }
}

<style>
    html, body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        background-color: #4682B4; /* Coral blue color */
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        margin: 0;
        padding: 0;
    }

    

    .top-right {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 1;
    }

    .centered-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
        z-index: 1;
    }

    .centered-image {
        max-width: 50%;
        height: auto;
        margin-bottom: 30px;
        z-index: 1;
    }

    .button-container {
        margin-top: 20px;
    }

    .custom-btn {
        display: block;
        width: 200px;
        padding: 15px;
        margin: 10px auto;
        border-radius: 50px;
        font-size: 1.1em;
        font-weight: bold;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .custom-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .just-browsing-btn {
        font-size: 1.1em;
        font-weight: 500;
        padding: 10px 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

    .btn-primary:hover,
    .btn-secondary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        color: #fff;
    }

    
</style>
