@page "/"

@inject NavigationManager Navigation

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            background-color: #ffffff;
            background-image: url('images/bg6.png');
            background-size: cover; /* Ensure the image covers the whole background */
            background-position: center; /* Center the image */
            color: #ffffff;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
        }

        .container {
            max-width: 600px;
            width: 100%;
            background-color: rgba(20, 60, 99, 0.8); /* Semi-transparent background for readability */
            padding: 20px;
            border-radius: 10px;
        }

        .logo {
            margin-bottom: 40px;
        }

            .logo img {
                max-width: 100%;
                height: auto;
            }

        .button {
            background-color: #8C9096;
            color: #ffffff;
            border: none;
            border-radius: 20px;
            padding: 15px 30px;
            font-size: 1em;
            margin: 10px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
        }

            .button:hover,
            .button:active {
                background-color: #ffffff;
                color: #143963;
                box-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
            }

            .button:active {
                background-color: #f1f1f1;
                transform: scale(1.05);
                box-shadow: 0 0 20px rgba(255, 255, 255, 1);
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Logo -->
        <div class="logo">
            <img src="images/logo.png" alt="SPCA Logo">
        </div>

        <!-- Buttons -->
        <a href="/welcome" class="button">Just Browse</a>
        <a href="/login" class="button">Login</a>
        <a href="/register" class="button">Register</a>
        <a href="/desktophome" class="button">Admin</a>
    </div>
</body>
</html>
