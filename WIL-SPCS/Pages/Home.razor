@page "/"
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f0f2f5;
            min-height: 100vh;
            color: #143963;
        }

        .container {
            text-align: center;
            background-color: #ffffff;
            padding: 40px 20px;
            width: 100%;
            max-width: 600px;
            border-radius: 8px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
        }

        .logo {
            margin-bottom: 20px;
        }

            .logo img {
                max-width: 150px;
                height: auto;
            }

        h1 {
            font-size: 32px;
            color: #143963;
            margin-bottom: 15px;
        }

        p {
            color: #333;
            margin-bottom: 30px;
            font-size: 18px;
        }

        .button-group {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 20px;
        }

        .button {
            text-decoration: none;
            background-color: #143963;
            color: #ffffff;
            padding: 12px;
            border-radius: 4px;
            font-size: 18px;
            transition: background-color 0.3s;
            display: block;
            text-align: center;
        }

            .button:hover {
                background-color: #0f2b52;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="logo">
            <img src="images/logo.png" alt="SPCA Logo">
        </div>

        <h1>Welcome to Our Site</h1>
        <p>Please choose an option to get started.</p>

        <div class="button-group">
            <a href="/browsing" class="button">Just Browse</a>
            <a href="/login" class="button">Login</a>
            <a href="/register" class="button">Register</a>
            <a href="/desktophome" class="button">Admin</a>
        </div>
    </div>

</body>
</html>
