@page "/"

@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject NavigationManager Navigation
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SPCA</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #143963;
            background: url('/images/background123.png') no-repeat center center;
            background-size: cover;
        }

        .container {
            text-align: center;
            background-color: rgba(255, 255, 255, 0.85);
            padding: 40px;
            width: 100%;
            max-width: 500px;
            border-radius: 10px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.15);
        }

        .logo {
            margin-bottom: 25px;
        }

            .logo img {
                max-width: 130px;
                height: auto;
            }

        h1 {
            font-size: 28px;
            color: #143963;
            margin-bottom: 10px;
            font-weight: bold;
        }

        p {
            color: #555;
            margin-bottom: 30px;
            font-size: 16px;
        }

        .button-group {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 15px;
        }

        .button {
            text-decoration: none;
            background-color: #143963;
            color: #ffffff;
            padding: 15px 0;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            transition: all 0.3s;
            display: block;
            text-align: center;
        }

            .button:hover {
                background-color: #ffffff;
                color: #143963;
                border: 2px solid #143963;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="logo">
            <img src="images/logo.png" alt="SPCA Logo">
        </div>

        <h1>Welcome to SPCA Uitenhage</h1>
        <p>Select an option below.</p>

        <div class="button-group">
            <a href="/browsing" class="button">Just Browse</a>
            <a href="/login" class="button">Login</a>
            <a href="/register" class="button">Register</a>
            <a href="/desktophome" class="button">Admin</a>
        </div>
    </div>

</body>
@code{
    public string userType;
    protected override async Task OnInitializedAsync()
    {
        userType = await LocalStorage.GetItemAsync<string>("userType");
        if(userType == "User")
        {
            Navigation.NavigateTo("/welcome");
        }
        else if(userType == "Admin")
        {
            Navigation.NavigateTo("/desktophome");
        }
    }
}
</html>
