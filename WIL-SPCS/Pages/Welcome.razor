@page "/welcome"
@layout MainLayout

<button class="open-btn" onclick="toggleNav('open')">☰</button>

<!-- Side Navigation Bar -->
<div id="sideNavbar" class="side-navbar">
    <a href="javascript:void(0)" class="close-btn" onclick="toggleNav('close')">×</a>
    <a href="/adopt" class="nav-link">Adopt a Pet</a>
    <a href="/awareness" class="nav-link">Awareness</a>
    <a href="/donations" class="nav-link">Donations and Sponsors</a>
    <a href="/volunteer" class="nav-link">Volunteer</a>
    <a href="/gallery" class="nav-link">Gallery</a>
    <a href="/boarding" class="nav-link">Animal Boarding</a>
    <a href="/events" class="nav-link">Events</a>
</div>

<!-- Main Content -->
<div class="main-content">
    <!-- SPCA Logo -->
    <div class="logo-container">
        <img src="images/logo.png" alt="SPCA Logo" class="spca-logo" />
    </div>

    <!-- Search Bar -->
    <div class="search-container">
        <input type="text" class="search-bar" placeholder="Search for pets, services..." />
    </div>

    <!-- Welcome Message -->
    <h2 class="welcome-message">
        🐾 Catch a glimpse of our adorable pets as they introduce themselves in this charming little video! 🐾
    </h2>

    <!-- Video Section -->
    <div class="video-grid">
        <video controls>
            <source src="videos/catvid1.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <video controls>
            <source src="videos/catvid2.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <video controls>
            <source src="videos/dogvid1.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <video controls>
            <source src="videos/dogvid2.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
    </div>

    <!-- See More Button -->
    <div class="see-more-container">
        <a href="/gallery" class="see-more-btn">See More</a>
    </div>
</div>

<script>
    function toggleNav(action) {
        document.getElementById("sideNavbar").style.width = action === 'open' ? '250px' : '0';
    }

    document.querySelector('.open-btn').addEventListener('click', () => toggleNav('open'));
    document.querySelector('.side-navbar .close-btn').addEventListener('click', () => toggleNav('close'));
</script>

<style>
    /* General styling */
    html, body {
        font-family: 'Quicksand', sans-serif;
        background: url('/images/background1.png') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        color: #ffffff;
    }

    /* SPCA logo */
    .spca-logo {
        display: block;
        margin: 10px auto;
        max-width: 120px;
        height: auto;
        margin-bottom: 20px; /* Adds space between logo and nav */
    }

    /* Side navigation bar */
    .side-navbar {
        height: 100%;
        width: 0;
        position: fixed;
        top: 140px; /* Puts the navbar under the logo */
        left: 0;
        background-color: #143963;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
        z-index: 100;
        border-right: 2px solid #ffffff;
    }

        .side-navbar .nav-link {
            padding: 15px 20px;
            font-size: 1.2em;
            color: #e0f7fa;
            display: block;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            text-decoration: none;
        }

            .side-navbar .nav-link:hover {
                background-color: #4775A9;
                color: #ffffff;
                box-shadow: 0 0 10px #ffffff;
            }

        .side-navbar .close-btn {
            position: absolute;
            top: 15px;
            right: 25px;
            font-size: 30px;
            color: #ffffff;
        }

    /* Open button */
    .open-btn {
        font-size: 24px;
        cursor: pointer;
        background-color: #143963;
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        border-radius: 20px;
        position: fixed;
        top: 140px; /* Aligns it with the navbar */
        left: 20px;
        z-index: 101;
        transition: background-color 0.3s ease;
    }

        .open-btn:hover {
            background-color: #0d2a4a;
        }

    /* Search bar styling */
    .search-container {
        text-align: center;
        margin-top: 30px;
    }

    .search-bar {
        padding: 12px 25px;
        width: 60%;
        max-width: 500px;
        border-radius: 50px;
        border: 2px solid #ffffff;
        background-color: #ffffff;
        color: #333;
        font-size: 1.2em;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        outline: none;
    }

    /* Welcome message */
    .welcome-message {
        text-align: center;
        font-size: 2em;
        margin-top: 30px;
        margin-bottom: 40px;
        color: #ffffff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    /* Video grid layout */
    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        justify-items: center;
        padding: 10px 20px;
    }

    video {
        width: 100%;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* See More button */
    .see-more-container {
        text-align: center;
        margin-top: 20px;
    }

    .see-more-btn {
        padding: 10px 20px;
        background-color: #ADD8E6; /* Light blue */
        color: #ffffff;
        border: none;
        border-radius: 20px;
        font-size: 1em; /* Smaller font size */
        text-decoration: none;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }

        .see-more-btn:hover {
            background-color: #ffffff;
            color: #143963;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.8); /* White glow */
        }

        .see-more-btn:active {
            background-color: #f1f1f1;
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(255, 255, 255, 1); /* Stronger glow on click */
        }
</style>
