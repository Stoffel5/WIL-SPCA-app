@page "/welcome"

<div class="welcome-container">
    <div class="text-box">
        <h3 class="centered-text">Information</h3>
    </div>

    <!-- Button to open the side navbar -->
    <button class="open-nav-btn" onclick="openNav()">☰ </button>

    <!-- Side Navigation Bar -->
    <div id="sideNavbar" class="side-navbar">
        <a href="javascript:void(0)" class="close-btn" onclick="closeNav()">×</a>
        <a href="/adopt" class="nav-link">Adopt a Pet</a>
        <a href="/awareness" class="nav-link">Awareness</a>
        <a href="/donations" class="nav-link">Donations and Sponsors</a>
        <a href="/volunteer" class="nav-link">Volunteer</a>
        <a href="/gallery" class="nav-link">Gallery</a>
        <a href="/boarding" class="nav-link">Animal Boarding</a>
        <a href="/events" class="nav-link">Events</a>
    </div>

    <!-- Container for sections -->
    <div class="slider-container">
        <div class="grid-container">
            <div class="adoption-section">
                <h2 class="centered-text">Adoption</h2>
                <p class="adoption-text">Hi there! Woof woof! I'm here to spread some love and joy.</p>
                <img src="css/adpot.jpg" alt="Adopt a Pet" class="adopt-image" />
            </div>
            <div class="adoption-section">
                <h2 class="centered-text">We are a PBO</h2>
                <p class="adoption-text">We're dedicated to caring for animals and finding them loving homes.</p>
                <img src="css/dogsimage.jpg" alt="PBO Info" class="adopt-image" />
            </div>
           
            <div class="adoption-section">
                <h2 class="centered-text">Pet Boarding</h2>
                <p class="adoption-text">We offer safe and caring boarding for your pets while you're away.</p>
                <img src="css/dog2.jpg" alt="Pet Boarding" class="adopt-image" />
            </div>
            <div class="adoption-section">
                <h2 class="centered-text">Volunteers</h2>
                <p class="adoption-text">Join our volunteer program and help us care for animals in need.</p>
                <img src="css/volunteer.jpg" alt="Volunteers" class="adopt-image" />
            </div>
            <div class="adoption-section">
                <h2 class="centered-text">Contact Info</h2>
                <p class="adoption-text">Address: Schonland St, Cape Road Industrial Kariega, 6021</p>
                <p class="adoption-text">Phone: 041 992 3016</p>
                <p class="adoption-class">EMERGENCY: 082 905 4716</p>
                <p class="adoption-class">Email: info@uitenhagespca.co.za</p>
            </div>
            <!-- Repeat sections -->
        </div>
    </div>

    <!-- Navigation Arrows -->
    <div class="nav-arrows">
        <button id="prevBtn">&#9664; Previous</button>
        <button id="nextBtn">Next &#9654;</button>
    </div>
</div>

<!-- Bottom Navbar -->
<div class="bottom-navbar">
    <a href="/" class="nav-item">
        <img src="css/home.jpg" alt="Home" class="nav-icon" />
    </a>
    <a href="/search" class="nav-item">
        <img src="css/search.jpg" alt="Search" class="nav-icon" />
    </a>
    <a href="/chat" class="nav-item">
        <img src="css/chat.jpg" alt="Chat" class="nav-icon" />
    </a>
</div>

<style>
    body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        background-color: #e6f7ff;
        margin: 0;
        padding: 0;
    }

    .welcome-container {
        padding: 20px;
        max-width: 900px;
        margin: auto;
    }

    .slider-container {
        overflow: hidden;
        margin: 30px 0;
    }

    .grid-container {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .adoption-section {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        color: #333;
        width: 300px;
        margin: 0 15px;
        text-align: center;
        flex-shrink: 0;
    }

    .adopt-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
    }

    .adoption-text {
        font-size: 1em;
        line-height: 1.4;
        color: #555;
    }

    .nav-arrows {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .nav-arrows button {
        background-color: #007BFF;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .nav-arrows button:hover {
        background-color: #0056b3;
    }

    /* Bottom Navbar */
    .bottom-navbar {
        position: fixed;
        bottom: 0;
        width: 100%;
        background-color: #ffffff;
        box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: space-around;
        padding: 10px 0;
    }

    .nav-item {
        text-align: center;
    }

    .nav-icon {
        width: 40px;
        height: 40px;
    }

    /* Side Navbar */
    .side-navbar {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #333;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
    }

    .side-navbar .nav-link {
        padding: 15px;
        font-size: 20px;
        color: white;
        display: block;
        transition: 0.3s;
    }

    .side-navbar .nav-link:hover {
        background-color: #0056b3;
    }

    .side-navbar .close-btn {
        position: absolute;
        top: 0;
        right: 20px;
        font-size: 36px;
    }

    .open-nav-btn {
        font-size: 20px;
        cursor: pointer;
        background-color: #007BFF;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 2;
    }

    .open-nav-btn:hover {
        background-color: #0056b3;
    }
    }
</style>

<script>
    let currentIndex = 0;
    const sections = document.querySelectorAll('.adoption-section');
    const totalSections = sections.length;

    document.getElementById('nextBtn').addEventListener('click', function () {
        if (currentIndex < totalSections - 1) {
            currentIndex++;
            updateSlider();
        }
    });

    document.getElementById('prevBtn').addEventListener('click', function () {
        if (currentIndex > 0) {
            currentIndex--;
            updateSlider();
        }
    });

    function openNav() {
        document.getElementById("sideNavbar").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("sideNavbar").style.width = "0";
    }

    function updateSlider() {
        const gridContainer = document.querySelector('.grid-container');
        gridContainer.style.transform = `translateX(-${currentIndex * 320}px)`;
    }
</script>
